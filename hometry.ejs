    <div class="content-wrapper" style="height:auto;">

      <section class="content-header">
        <h1 class="c1">Telangana State Ration Shop</h1>
      </section>

      <section class="content">
        <h2> Welcome !</h2>
        <p> TS government has taken an initiative to give ration to all the
          citizens of the state who have suffered alot due to
          the pandemic. The items made available are given as follows: </p>



        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Stock Details</h3>
          <!-- </div> -->
          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip"
              title="Collapse">
              <i class="fas fa-minus"></i></button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fas fa-times"></i></button>
          </div>
          </div>


          <div class="card-body" >
            <table id="example1" class="table  table-bordered center">
              <thead>
                <tr>
                  <th>Product ID</th>
                  <th>Product Name</th>
                  <th>Stock(in kg)</th>
                  <th>Price(per kg)</th>
                  <th>Operations</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i<data.length; i++) {%>
                <tr>
                  <td><%= data[i].pid %></td>
                  <td><%= data[i].pname %></td>
                  <td><%= data[i].stock %></td>
                  <td><%= data[i].price %></td>
                  <td class="project-actions ">
                    <span>
                      <form action="/updatestock2" method="post">
                        <input type="hidden" name="updatepid" id="updatepid" value=<%=data[i].pid %>>
                        <button type="submit" class="btn btn-info btn-sm" style="float: right;"><i
                            class="fas fa-pencil-alt"></i>Edit</button>
                      </form>
                      <form action="/deleteproduct2" method="post">
                        <input type="hidden" name="delpid" id="delpid" value=<%=data[i].pid %>>
                        <button type="submit" class="btn btn-danger  swalDefaultSuccess btn-sm" style="float: right;"><i
                            class="fas fa-trash"></i>Delete</button>
                      </form>
                    </span>


                  </td>
                </tr>
                <% } %>
              </tbody>
              <tfoot>
                <tr>
                  <th>Product ID</th>
                  <th>Product Name</th>
                  <th>Stock(in kg)</th>
                  <th>Price(per kg)</th>
                  <th>Operations</th>
                </tr>
              </tfoot>

            </table>
          </div>

        </div>




      </section>
    </div>
